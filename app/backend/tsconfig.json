{
  "include": ["env.d.ts", "src/**/*", ".eslintrc.cjs", "test/**/*"],
  "compilerOptions": {
    "strict": true,
    "module": "Node16",
    "target": "ESNext",
    "declaration": true,
    "moduleResolution": "Node16",
    "resolveJsonModule": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "rootDir": "./",
    "skipLibCheck": true,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "~/*": ["src/*"],
      "~~/*": ["./*"]
    }
  }
}
